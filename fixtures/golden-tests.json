{
  "$schema": "./golden-tests.schema.json",
  "version": "2.0",
  "mcp_name": "Croatian Law MCP",
  "description": "Golden contract tests for the Croatian Law MCP -- 16 tests covering article retrieval, search, citation, cross-reference, full-corpus coverage, and negative cases",
  "tests": [
    {
      "id": "hr-001",
      "category": "article_retrieval",
      "description": "Retrieve GDPR Implementation Act Art. 1 -- scope and subject matter of the Croatian GDPR implementing provisions",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Zakon o provedbi Opće uredbe o zaštiti podataka",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["Regulation (EU) 2016/679", "General Data Protection Regulation", "personal data", "Republic of Croatia"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "hr-002",
      "category": "article_retrieval",
      "description": "Retrieve Cybersecurity Act Art. 1 -- scope of the Croatian NIS2 transposition",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Zakon o kibernetičkoj sigurnosti",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["cybersecurity", "Directive (EU) 2022/2555", "NIS2", "essential"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "hr-003",
      "category": "article_retrieval",
      "description": "Retrieve Criminal Code Art. 266 -- unauthorised access to a computer system",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Kazneni zakon",
        "article": "266"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["computer system", "unauthorised", "access", "security measures"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "hr-004",
      "category": "article_retrieval",
      "description": "Retrieve Critical Infrastructure Protection Act Art. 7 -- operator security plans",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Zakon o kritičnim infrastrukturama",
        "article": "7"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["operator security plan", "risk assessment", "security measures", "critical"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "hr-005",
      "category": "search",
      "description": "Full-text search for 'osobni podaci' (personal data in Croatian) returns GDPR-related provisions",
      "tool": "search_legislation",
      "input": {
        "query": "osobni podaci"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 5,
        "any_result_contains": ["osobni", "podaci", "zaštita"]
      }
    },
    {
      "id": "hr-006",
      "category": "search",
      "description": "Full-text search for 'kibernetička sigurnost' returns cybersecurity provisions across Croatian law",
      "tool": "search_legislation",
      "input": {
        "query": "kibernetička sigurnost"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["kibernetičk", "sigurnost"]
      }
    },
    {
      "id": "hr-007",
      "category": "search",
      "description": "Full-text search for 'poslovna tajna' (trade secret in Croatian) returns Trade Secrets Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "poslovna tajna"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["tajna", "zaštita"]
      }
    },
    {
      "id": "hr-008",
      "category": "citation_roundtrip",
      "description": "Citation for GDPR Implementation Act Art. 10 includes nn.hr URL pattern",
      "tool": "get_provision",
      "input": {
        "law_identifier": "GDPR Implementation Act",
        "article": "10"
      },
      "assertions": {
        "result_not_empty": true,
        "citation_url_pattern": "nn\\.hr",
        "text_not_empty": true
      }
    },
    {
      "id": "hr-009",
      "category": "citation_roundtrip",
      "description": "Citation for Electronic Communications Act Art. 3 includes nn.hr URL pattern",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Zakon o elektroničkim komunikacijama",
        "article": "3"
      },
      "assertions": {
        "result_not_empty": true,
        "citation_url_pattern": "nn\\.hr",
        "text_not_empty": true
      }
    },
    {
      "id": "hr-010",
      "category": "eu_cross_reference",
      "description": "GDPR Implementation Act cross-reference to EU GDPR -- Croatian GDPR Act implements Regulation (EU) 2016/679",
      "tool": "get_provision_eu_basis",
      "input": {
        "law_identifier": "Zakon o provedbi Opće uredbe o zaštiti podataka"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["GDPR", "General Data Protection Regulation", "2016/679"]
      }
    },
    {
      "id": "hr-011",
      "category": "negative_test",
      "description": "Non-existent Croatian law returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Zakon o izmišljenim stvarima (NN 99/99)",
        "article": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "hr-012",
      "category": "negative_test",
      "description": "Malformed article number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Zakon o provedbi Opće uredbe o zaštiti podataka",
        "article": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "hr-013",
      "category": "article_retrieval",
      "description": "Retrieve Obligations Act Art. 1 -- full corpus law (Zakon o obveznim odnosima, 1163 provisions)",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Zakon o obveznim odnosima",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "hr-014",
      "category": "article_retrieval",
      "description": "Retrieve Maritime Code Art. 1 -- full corpus law (Pomorski zakonik, 1031 provisions)",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Pomorski zakonik",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "hr-015",
      "category": "search",
      "description": "Full-text search for 'javna nabava' (public procurement) returns provisions across Croatian law",
      "tool": "search_legislation",
      "input": {
        "query": "javna nabava"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 3,
        "any_result_contains": ["javna", "nabava"]
      }
    },
    {
      "id": "hr-016",
      "category": "search",
      "description": "Full-text search for 'radni odnos' (employment relationship) returns labour law provisions",
      "tool": "search_legislation",
      "input": {
        "query": "radni odnos"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 3,
        "any_result_contains": ["radn", "odnos"]
      }
    }
  ]
}
