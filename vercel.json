{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "outputDirectory": ".",
  "buildCommand": "npm run build",
  "rewrites": [
    { "source": "/mcp", "destination": "/api/mcp" },
    { "source": "/health", "destination": "/api/health" }
  ],
  "functions": {
    "api/mcp.ts": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "{node_modules/node-sqlite3-wasm/dist/node-sqlite3-wasm.wasm,node_modules/.pnpm/node-sqlite3-wasm*/node_modules/node-sqlite3-wasm/dist/node-sqlite3-wasm.wasm}"
    },
    "api/health.ts": {
      "maxDuration": 30,
      "memory": 512,
      "includeFiles": "{node_modules/node-sqlite3-wasm/dist/node-sqlite3-wasm.wasm,node_modules/.pnpm/node-sqlite3-wasm*/node_modules/node-sqlite3-wasm/dist/node-sqlite3-wasm.wasm}"
    }
  }
}
